#include<bits/stdc++.h>
#define ll long long
using namespace std;

int m, n;
vector<int> a(1e6+1, 0);
vector<long long> f(1e6+1, 0);

bool thoaManDeBai(int mid);

main()
{
	ios::sync_with_stdio(0);
	cin.tie(0);
	
	cin >> m >> n;
	for(int i = 1; i <= n; i++)
	{
		cin >> a[i];
		f[i] = f[i-1] + a[i];
	}
	
	int l = 1, r = n, res = 0;
	
	while(l <= r)
	{
		int mid = (l + r) / 2;
		
		if(thoaManDeBai(mid))
		{
			res = mid;
			l = mid + 1;
		}
		else r = mid - 1;
	}
	
	cout << res;
}

bool thoaManDeBai(int distance)
{
	bool thoaMan = false;
	
	for(int i = distance; i <= n && thoaMan == false; i++)
		thoaMan = bool(f[i] - f[i-distance] <= m);
	
	return thoaMan;
}
