#include<bits/stdc++.h>
using namespace std;

int n, m, a[102][102], d = 1, cnt[10001], cot = 0, hang = 0, ans = 0;
int h[] = {-1, 0, 1, 0}, v[] = {0, 1, 0, -1};

void loang(int x, int y)
{
    for(int i = 0; i < 4; i++)
        if(a[x + h[i]][y + v[i]] == 0)
        {
            a[x + h[i]][y + v[i]] = d;
            cnt[d]++;
            loang(x + h[i], y + v[i]);
        }
}

main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);

    cin >> m >> n;
    for(int i = 1; i <= m; i++)
        for(int j = 1; j <= n; j++)
            cin >> a[i][j];
    for(int i = 1; i <= m; i++) a[i][0] = a[i][n+1] = -1;
    for(int j = 1; j <= n; j++) a[0][j] = a[m+1][j] = -1;
    
    for(int i = 1; i <= m; i++)
        for(int j = 1; j <= n; j++)
            if(a[i][j] == 0)
            {
                d++;
                a[i][j] = d;
                cnt[d]++;
                loang(i, j);
                if(cnt[d] > ans)
                {
                    ans = cnt[d];
                    hang = i;
                    cot = j;
                }
            }
            
    cout << d-1 << '\n' << ans << '\n' << hang << ' ' << cot;
}
