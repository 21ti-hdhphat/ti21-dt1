#include<bits/stdc++.h>
#define ll long long
using namespace std;

int m, n, a[1000001], res = 0;

main()
{
	ios::sync_with_stdio(0);
	cin.tie(0);
	
	cin >> m >> n;
	for(int i = 1; i <= n; i++)
		cin >> a[i];
	
	int sum = 0, cnt = 0, start = 1;
	for(int i = 1; i <= n; i++)
	{
		sum += a[i];
		cnt++;
		while(sum > m)
		{
			sum -= a[start];
			start++;
			cnt--;
		}
		if(cnt > res) res = cnt;
	}
	
	cout << res;
}
