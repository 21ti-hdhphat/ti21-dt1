#include<bits/stdc++.h>
#define ll long long
#define lon(x, y) (x > y ? x : y)
#define be(x, y) (x < y ? x : y)
using namespace std;

int n, x, top = 0, bot = 1;
ll cnt1 = 0, cnt2 = 0;
vector<int> h(1100001, INT_MAX), a(1100001, INT_MIN), b = h, q = h;
void push_top(int x){q[++top] = x;}
void pop_top(){--top;}
void pop_bot(){++bot;}
int size(){return top - bot + 1;}
void clear(){bot = 1; top = 0;}

main()
{
	ios::sync_with_stdio(0);
	cin.tie(0);

	cin >> n >> x;

	for(int i = 1; i <= n; i++)
        cin >> h[i];

    for(int i = 1; i <= n; i++)
    {
        while(size() > 0 && q[bot] <= i - x) bot++;
        while(size() > 0 && h[i] <= h[q[top]]) top--;
        push_top(i);
        if(i < x) continue;
        a[i] = h[q[bot]];
    }

    clear();

    for(int i = 1; i <= n + x - 1; i++)
    {
        while(size() > 0 && q[bot] <= i - x) bot++;
        while(size() > 0 && a[i] >= a[q[top]]) top--;
        push_top(i);
        if(i < x) continue;
        b[i - x + 1] = a[q[bot]];

    }

    for(int i = 1; i <= n; i++)
    {
        cnt1 = cnt1 + h[i] -  b[i];
    }
    cout << cnt1 << '\n';

    int i = 1;
    for(int j = 2; j <= n; j++)
    {
        if(b[j] != b[i] || j - x >= i)
        {
            i = j;
            cnt2++;
        }
    }
    while(n >= i) cnt2++, i+=x;
    cout << cnt2;
}
