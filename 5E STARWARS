#include<bits/stdc++.h>
using namespace std;

int n, m, a[1002][1002], q, cnt = 0;

int h[] = {-1, 0, 1, 0}, v[] = {0, 1, 0, -1};
void loang(int x, int y)
{
    a[x][y] = 0;
    for(int i = 0; i < 4; i++)
    {
        int tmp = a[x + h[i]][y + v[i]];
        if(tmp == 1)
        {
            cnt--;
            loang(x + h[i], y + v[i]);
        }
    }
}

main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);

    cin >> n >> m >> q;
    for(int i = 1; i <= n; i++) a[i][0] = a[i][m+1] = -1;
    for(int j = 1; j <= m; j++) a[0][j] = a[n+1][j] = -1;
    for(int i = 1; i <= n; i++)
    {
        for(int j = 1; j <= m; j++)
        {
            cin >> a[i][j];
            if(a[i][j] == 1) cnt++;
        }
    }
    while(q--)
    {
        int x, y;
        cin >> x >> y;
        if(a[x][y] == 1)
        {
            cnt--;
            loang(x, y);
        }
        cout << cnt << '\n';
    }
}
